@model List<MyMvcApplication.Models.SubjectSched>
<html>
<head>
    <title>Subject Schedule List</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <link rel="stylesheet" href="~/css/SubjectSched/SubjectSchedIndex.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-dark bg-grey">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </nav>
    <h2>Subject Schedule List</h2>
    <div class="table-wrapper">
        <div class="container text-center">
            <div class="row row-cols-auto">
                <div class="col">
                    <form>
                        <button class="btn btn-close-white " asp-area="" asp-controller="SubjectSched" asp-action="Add">Add Schedule</button>
                    </form>
                </div>
                <div class="col1">
					<form asp-controller="SubjectSched" asp-action="Search" method="get">
                        <input type="text" name="searchString" placeholder="Search by EdpCode">
                        <button type="submit">Search</button>
                        <button type="submit">All</button>
                    </form>
                </div>
            </div>
        </div>
    <table class="fl-table">
        <thead>
            <tr class="table-dark">
                <th>EDPCODE</th>
                <th>SUBJCODE</th>
                <th>STARTTIME</th>
                <th>ENDTIME</th>
                <th>DAYS</th>
                <th>ROOM</th>
                <th>MAXSIZE</th>
                <th>CLASSSIZE</th>
                <th>STATUS</th>
                <th>FXM</th>
                <th>SECTION</th>
                <th>SCHOOLYEAR</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var subjsched in Model)
            {
                <tr>
                    <td>@subjsched.EDPCODE</td>
                    <td>@subjsched.SUBJCODE</td>
                    <td>@subjsched.STARTTIME.ToString("h:mm tt")</td>
                    <td>@subjsched.ENDTIME.ToString("h:mm tt")</td>
                    <td>@subjsched.DAYS</td>
                    <td>@subjsched.ROOM</td>
                    <td>@subjsched.MAXSIZE</td>
                    <td>@subjsched.CLASSSIZE</td>
                    <td>@subjsched.STATUS</td>
                    <td>@subjsched.FXM</td>
                    <td>@subjsched.SECTION</td>
                    <td>@subjsched.SCHOOLYEAR</td>
                        <td class="d-flex">
                            <a asp-action="Edit" asp-route-id="@subjsched.EDPCODE">
                                <i class="fas fa-edit fa-2x"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@subjsched.EDPCODE" method="post">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this schedule?')">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                    </td>

                </tr>
            }
        </tbody>

    </table>
</div>
</body>
</html>

