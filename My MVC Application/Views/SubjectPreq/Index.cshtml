@model List<MyMvcApplication.Models.SubjectAndSubjectPreq>
<html>
<head>
    <title>Student List</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <link rel="stylesheet" href="~/css/SubjectPreq/SubjectPreqIndex.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-dark bg-grey">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </nav>
    <h2>Subject Prequisite</h2>
    <div class="table-wrapper">
        <div class="container text-center">
            <div class="row row-cols-auto">            
                <div class="col1">
                    <form asp-controller="SubjectPreq" asp-action="Search" method="get">
                        <input type="text" name="searchString" placeholder="Search by Subject Code">
                        <button type="submit">Search</button>
                        <button type="submit">All</button>
                    </form>
                </div>
            </div>
        </div>
        <table class="fl-table">
            <thead>
                <tr class="table-dark">
                    <th>Subject Code</th>
                    <th>Subject PreCode</th>                                  
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var SubjectAndSubjectPreq in Model)
                {
                    <tr>
                        <td>@SubjectAndSubjectPreq.SUBJCODE</td>
                        <td>@SubjectAndSubjectPreq.SUBJPRECODE</td>                
                        <td>@SubjectAndSubjectPreq.SUBJCATEGORY</td>
                        <td class="d-flex">
                            <a asp-action="Edit" asp-route-id="@SubjectAndSubjectPreq.SUBJCODE" asp-route-courseCode="@SubjectAndSubjectPreq.SUBJCOURSECODE">
                                <i class="fas fa-edit fa-2x"></i>
                            </a>

                            <form asp-action="Delete" asp-route-id="@SubjectAndSubjectPreq.SUBJCODE" asp-route-courseCode="@SubjectAndSubjectPreq.SUBJCOURSECODE" method="post">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this subject?')">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>