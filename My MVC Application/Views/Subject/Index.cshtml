@model List<MyMvcApplication.Models.SubjectAndSubjectPreq>
<html>
<head>
    <title>Subject List</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Subject/SubjectIndex.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-dark bg-grey">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </nav>
    <h2>Subject List</h2>
    <div class="table-wrapper">
        <div class="container text-center">
            <div class="row row-cols-auto">
                <div class="col">
                    <form>
                        <button class="btn btn-close-white " asp-area="" asp-controller="Subject" asp-action="Add">Add Subject</button>
                    </form>
                </div>
                <div class="col1">
                    <form asp-controller="Subject" asp-action="Search" method="get">
                        <input type="text" name="searchString" placeholder="Search by Subject Code">
                        <button type="submit">Search</button>
                        <button type="submit">All</button>
                    </form>
                </div>
            </div>
        </div>
    <table class="fl-table">
     <thead>
        <tr class="table-dark">
            <th scope="col">Subject Code</th>
            <th scope="col">Description</th>
            <th scope="col">Units</th>
            <th scope="col">Offering</th>
            <th scope="col">Category</th>
            <th scope="col">Status</th>
            <th scope="col">Course Code</th> 
            <th scope="col">Curriculum</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var subject in Model)
        {
         <tr>
              <td>@subject.SUBJCODE</td>
              <td>@subject.SUBJDESC</td>
              <td>@subject.SUBJUNITS</td>
              <td>@subject.SUBJREGOFRNG</td>
              <td>@subject.SFSUBJCATEGORY</td>
              <td>@subject.SUBJSTATUS</td>
              <td>@subject.SUBJCOURSECODE</td>
              <td>@subject.SUBJCURRCODE</td>

               <td class="d-flex">
                   <a asp-action="Edit" asp-route-id="@subject.SUBJCODE" asp-route-courseCode="@subject.SUBJCOURSECODE">
                     <i class="fas fa-edit fa-2x"></i>
                   </a>

                  <form asp-action="Delete" asp-route-id="@subject.SUBJCODE" asp-route-courseCode="@subject.SUBJCOURSECODE" method="post">
                     <button type="submit"  onclick="return confirm('Are you sure you want to delete this subject?')">
                          <i class="fas fa-trash-alt"></i>
                      </button>
                  </form>
                </td>
        </tr>
        }
        </tbody>
    </table>
  </div>
</body>
</html>