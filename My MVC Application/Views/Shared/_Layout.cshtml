<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] University Of Cebu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/My_MVC_Application.styles.css" asp-append-version="true" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">University Of Cebu</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Index">Student</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="subjectDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Subject</a>
                            <div class="dropdown-menu" aria-labelledby="subjectDropdown">
                                <a class="dropdown-item" asp-controller="Subject" asp-action="Index">Subject</a>
                                <a class="dropdown-item" asp-area="" asp-controller="SubjectPreq" asp-action="Index">Subject Prequisite</a>
                                <a class="dropdown-item" asp-area="" asp-controller="SubjectSched" asp-action="Index">Subject Schedule</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="subjectDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Enrollment</a>
                            <div class="dropdown-menu" aria-labelledby="subjectDropdown">                    
                                <a class="dropdown-item" asp-area="" asp-controller="EnrollmentDetailFile" asp-action="Index">Enrollment Detail</a>
                                <a class="dropdown-item" asp-area="" asp-controller="EnrollmentHeaderFile" asp-action="Index">Enrollment Header</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="EnrollmentHeaderFile" asp-action="Add">Enrollment Entry</a>
                        </li>                      
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var navbar = document.querySelector('.navbar');

            document.querySelector('.navbar-toggler').addEventListener('click', function () {
                navbar.classList.toggle('hidden');
            });
        });
        $(document).ready(function () {
            $('.navbar-toggler').click(function () {
                $('.navbar').toggleClass('hidden');
            });
        });
    </script>
</body>
</html>
